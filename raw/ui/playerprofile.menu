	//
	/////////////////////
	
	menuDef
	{
		CENTER_POPUP_SETUP( profile_create_too_many_popmenu, 4, ;, 1 )
		CHOICE_POPMENU_SUBTITLE( "@MENU_PROFILE_CREATE_TOO_MANY" )

		CHOICE_BUTTON( 4, "@MENU_OK", close self; )
